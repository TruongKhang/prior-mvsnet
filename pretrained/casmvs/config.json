{
    "name": "CasMVSNet",
    "n_gpu": 1,
    "arch": {
        "type": "CascadeMVSNet",
        "args": {
            "refine": false,
            "ndepths": [
                64,
                32,
                8
            ],
            "depth_interals_ratio": [
                4.0,
                2.0,
                1.0
            ],
            "share_cr": false,
            "cr_base_chs": [
                8,
                8,
                8
            ],
            "grad_method": "detach"
        }
    },
    "data_loader": {
        "type": "DTULoader",
        "args": {
            "data_path": "/mnt/sdb/khang/dtu_dataset/train",
            "data_list": "lists/dtu/train.txt",
            "mode": "train",
            "num_srcs": 4,
            "num_depths": 192,
            "interval_scale": 1.06,
            "shuffle": true,
            "batch_size": 3
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0005,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "seq_prob_loss",
    "metrics": [
        "mae",
        "rmse",
        "mre"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 1,
        "seq": true,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "logging_every": 100,
        "early_stop": 20,
        "tensorboard": false,
        "depth_scale": 1.0,
        "use_prior": true,
        "use_prior_loss": false,
        "lrepochs": "3,6,9:2",
        "dlossw": [
            0.5,
            1.0,
            2.0
        ],
        "eval_freq": 1
    }
}
