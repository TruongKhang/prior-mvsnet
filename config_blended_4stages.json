{
    "name": "SeqProbMVS",
    "n_gpu": 2,
    "dataset_name": "blendedmvs",

    "arch": {
        "type": "SeqProbMVSNet",
        "args": {
            "refine": true,
            "ndepths": [64, 32, 8],
            "depth_interals_ratio": [3.0, 2.0, 1.0],
            "share_cr": false,
            "cr_base_chs": [8, 8, 8],
            "num_stages": 4,
            "grad_method": "detach",
            "pretrained_prior": "saved/models/PriorNet/0408_032243/checkpoint-epoch20.pth",
            "pretrained_model": "pretrained/full_4stages/model_best.ckpt"
        }
    },
    "data_loader": {
        "type": "BlendedLoader",
        "args":{
            "data_path": "/mnt/sdb1/khang/blendedmvs",
            "data_list": "lists/blended/training_list.txt",
            "valid_data_list": "lists/blended/validation_list.txt",
            "mode": "train",
            "num_srcs": 4,
            "num_depths": 192,
            "interval_scale": 1.0,
            "shuffle": true,
            "batch_size": 4,
            "num_stages": 4,
            "load_prior": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0002,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "seq_prob_loss",
    "metrics": [
        "mae", "rmse", "mre"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 3,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 30,
        "seq": true,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "logging_every": 100,
        "early_stop": 20,
        "tensorboard": false,
        "scale2dtu": 1.0,
        "use_prior": true,
        "use_prior_loss": false,
        "lrepochs": "15:2",
        "dlossw": [0.5, 1.0, 2.0],
        "eval_freq": 1
    }
}
