{
    "name": "SeqProbMVS",
    "n_gpu": 1,
    "dataset_name": "dtu",

    "arch": {
        "type": "SeqProbMVSNet",
        "args": {
            "refine": false,
            "ndepths": [48, 32, 8],
            "depth_interals_ratio": [4.0, 2.0, 1.0],
            "share_cr": false,
            "cr_base_chs": [8, 8, 8],
            "grad_method": "detach",
            "pretrained_prior": ""
        }
    },
    "data_loader": {
        "type": "DTULoader",
        "args":{
            "data_path": "",
            "data_list": "lists/dtu/train.txt",
            "mode": "train",
            "num_srcs": 3,
            "num_depths": 192,
            "interval_scale": 1.0,
            "shuffle": true,
            "seq_size": 49,
            "batch_size": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "seq_prob_loss",
    "metrics": [
        "mae", "rmse", "mre"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 20,
        "seq": true,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "logging_every": 200,
        "monitor": "min val_mae",
        "early_stop": 20,
        "tensorboard": false,
        "depth_scale": 100.0,
        "use_prior": true
    }
}
